<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="com.bit.pixelopolis_car.activities.BaseActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/act_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            // Here will be all activity content placed</FrameLayout>

        <ImageView
            android:id="@+id/warning_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickWarningMessage"
            android:scaleType="centerCrop" />

        <ImageView
            android:id="@+id/error_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="onClickErrorMessage"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/state_textbox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>

        <TextView
            android:id="@+id/car_id_textbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:textSize="30dp" />

        <include
            android:id="@+id/spinner_layout"
            layout="@layout/spinner_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#75FFFFFF"
            android:clickable="true"
            android:visibility="gone" />

    </FrameLayout>
</LinearLayout>
